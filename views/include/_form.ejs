<form action="/api/users" method="post" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="John Doe">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" name="gender" value="male" id="radio-male">
                <label for="radio-male" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="gender" value="female" id="radio-female">
                <label for="radio-female" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" name="status" value="active" id="radio-active">
                <label for="radio-active" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="status" value="inactive" id="radio-inactive">
                <label for="radio-inactive" class="radio-label">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update"> Save</button>
        </div>
    </div>
</form>